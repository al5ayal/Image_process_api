{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "spec", "build", "src/devTools"],
  "include": ["./src"]
}
